<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); -%>
  </head>
  <body class="vertical light">
    <main class="wrapper vh-100">
      <div class="container-fluid">
        <div class="row align-items-center vh-100">
          <div class="col-lg-2 d-none d-lg-flex"></div>

          <div class="col-lg-4">
            <img
              src="/admin/assets/images/undraw_people.svg"
              alt=""
              class="img-fluid" />
          </div>
          <!-- ./col -->
          <div class="col-lg-6">
            <div class="w-50 mx-auto">
              <form class="mx-auto text-center">
                <a
                  class="navbar-brand flex-fill mx-auto mt-2 text-center"
                  href="/admin/dashboard">
                  <svg
                    version="1.1"
                    id="logo"
                    class="navbar-brand-img brand-md"
                    xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                    x="0px"
                    y="0px"
                    viewBox="0 0 120 120"
                    xml:space="preserve">
                    <g>
                      <polygon
                        class="st0"
                        points="78,105 15,105 24,87 87,87 	" />
                      <polygon class="st0" points="96,69 33,69 42,51 105,51 	" />
                      <polygon class="st0" points="78,33 15,33 24,15 87,15 	" />
                    </g>
                  </svg>
                </a>
                <h1 class="h6 mb-3">Sign in</h1>
                <div class="form-group">
                  <label for="adminEmail" class="sr-only">Email address</label>
                  <input
                    type="email"
                    id="adminEmail"
                    name="adminEmail"
                    class="form-control form-control-lg"
                    placeholder="Email address"
                    required />
                </div>
                <div class="form-group">
                  <label for="AdminPassword" class="sr-only">Password</label>
                  <input
                    type="password"
                    id="AdminPassword"
                    name="AdminPassword"
                    class="form-control form-control-lg"
                    placeholder="Password"
                    required />
                </div>
                <!-- <div class="checkbox mb-3">
                  <label>
                    <input type="checkbox" value="remember-me" /> Stay logged in
                  </label>
                </div> -->
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                  Let me in
                </button>
              </form>
            </div>
            <!-- .card -->
          </div>
          <!-- ./col -->
        </div>
        <!-- .row -->
      </div>
    </main>
    <!-- .wrapper -->
    <%- include('partials/script'); -%>
  </body>
</html>
